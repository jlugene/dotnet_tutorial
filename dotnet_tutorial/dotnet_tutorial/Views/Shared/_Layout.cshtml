<!DOCTYPE html>
<html lang="ja">
<head>
	<meta charset="utf-8">
	<title>Merchant Support .NET Core MVC Tutorials</title>
	<link rel="shortcut icon" type="image/vnd.microsoft.icon" href="~/images/MSIcon.ico" />
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
	<script src="~/js/jquery.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
</head>

<body>	
	<style type="text/css">
	body{
		margin-left: auto;
		margin-right: auto;
		max-width: 800px;
	}
	.container{
		max-width:800px;
	}
	#header{
		padding: 25px 0;
	}
	#header-logo{
		float: left;
		width: 90%;
	}
	#header-home{
		float: left;
		width: 10%;
		text-align: right;
		padding: 12px 0;
	}
	h1 {
    font-size: 24px;
		padding-top: 20px;
	}
	h2 {
    font-size: 18px;
	}
	</style>

	<div id="header">
		<div id="header-logo">
			<img src="~/images/logo.gif" alt="Merchant Support">
		</div>
		<div id="header-home" class="col-sm-2">
			<a href="/">回首页</a>
		</div>
	</div>

	@RenderBody()

</body>
</html>