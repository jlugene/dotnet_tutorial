@{
    Layout = "_Layout";
}

@using MerchantSupport.Tutorial;

@model Lesson15Controller.Holiday

<style type="text/css">
.row{
	margin-top: 10px;
}
.validation-summary-errors{
	color: red;
	font-weight: bold;
}
</style>

<h1>第15课：模型验证2 - 利用TagHelper实现消息提示</h1>
<h2>填写假日</h2>

<form action="/lesson15/show" method="post">
	<div class="row">
		<div class="col-sm-3">
			<label>假日日期</label>
		</div>

		<div class="col-sm-9">
			<input type="text" name="Day" value="@Model.Day"/>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-3">
			<label>假日名称</label>
		</div>
		<div class="col-sm-9">
			<input type="text" name="Name" value="@Model.Name" />
		</div>
	</div>
	
	<div class="row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-9">
			<div asp-validation-summary="All"></div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-3">
		</div>
		<div class="col-sm-9">
		<input type="submit" value="提交"/>
		</div>
	</div>
</form>
