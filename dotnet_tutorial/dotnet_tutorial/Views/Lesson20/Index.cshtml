@{
    Layout = "_Layout";
}

@using MerchantSupport.Lib;
@using MerchantSupport.Tutorial;

@model T_Holiday[]

<style type="text/css">
.row{
	margin-top: 10px;
}
table{
	width: 100%;
}
table th{
	text-align:center;
	font-weight: bold;
}
table td{
	padding: 2px 4px;
}
</style>

<h1>第20课：数据库查询 - 单页显示列表</h1>
<h2>假日列表</h2>
<table class="table-bordered table-hover table-striped">
	<tbody>
		<tr>
			<th>ID</th>
			<th>日期</th>
			<th>名称</th>
		</tr>
		@foreach(var record in Model)
		{
			 <tr>
				 <td>@record.Id</td>
				 <td>@record.Holiday.ToJapanDate()</td>
				 <td>@record.Holiday_Name</td>
			 </tr>
		}
	</tbody>
</table>
